@page "/users"
@inject HttpClientService _client;

<PageTitle>Users</PageTitle>

<h1>Users</h1>

<p>This component demonstrates showing data.</p>

@if (_users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Password</th>
                <th>Avatar</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in _users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>
                        <input type="text" @bind-value="@user.Login" />
                    </td>
                    <td>
                        <input type="text" @bind-value="@user.PasswordHash" />
                    </td>
                    <td>
                        <img src="@user.AvatarUrl" alt="avatar" style="width:64px" />
                    </td>
                    <td>
                        <button class="btn btn-primary" style="width:60px; height:60px" @onclick=@(async () => await UpdateUser(user))>
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </button>
                        <button class="btn btn-primary" style="width:60px; height:60px" @onclick=@(async () => await DeleteUser(user.Id))>
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
            <tr>
                <td>Create new user: </td>
                <td>
                    <input type="text" @bind-value=newLogin placeholder="User login..." />
                </td>
                <td>
                    <input type="text" @bind-value=newPassword placeholder="User password..." />
                </td>
                <td>
                    
                </td>
                <td>
                    <button @onclick=CreateUser class="btn btn-primary" style="width:60px; height:60px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
}

@code {
    private List<User> _users;

    private string newLogin { get; set; } = string.Empty;
    private string newPassword { get; set; } = string.Empty;

    private async Task UpdateList()
    {
        var response = await _client.GetAsync<List<User>>("users");
        if (response.IsSuccess)
            _users = response.Data!;
    }

    protected override async Task OnInitializedAsync()
    {
        await UpdateList();
    }

    private async Task CreateUser()
    {
        if (String.IsNullOrWhiteSpace(newLogin) || String.IsNullOrWhiteSpace(newPassword))
            return;

        var user = new User() 
        { 
            Id = Guid.NewGuid(),
            Login = newLogin,
            PasswordHash = newPassword
        };

        var response = await _client.PostAsync<User, User>("users", user);
        if (response.IsSuccess)
        {
            _users.Add(response.Data!);
            StateHasChanged();
        }
    }

    private async Task UpdateUser(User userArg)
    {
        if (String.IsNullOrWhiteSpace(userArg.Login) || String.IsNullOrWhiteSpace(userArg.PasswordHash))
            return;

        var response = await _client.PutAsync<object, User>("users", userArg);
        if (response.IsSuccess)
        {
            StateHasChanged();
        }
    }

    private async Task DeleteUser(Guid id)
    {
        var response = await _client.DeleteAsync<object>($"users/{id}");
        if (response.IsSuccess)
        {
            var index = _users.FindIndex(u => u.Id == id);
            _users.RemoveAt(index);

            StateHasChanged();
        }
    }
}
